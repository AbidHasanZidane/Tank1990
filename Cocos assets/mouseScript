import { _decorator, Component, EventMouse, Input, Node } from 'cc';
import { tankScript } from './tankScript';  // Adjust the path as needed

const { ccclass, property } = _decorator;

@ccclass('MouseScript')
export class MouseScript extends Component {
    @property(Node)
    tank: Node = null;  // Reference to the tank node

    onLoad() {
        this.node.on(Input.EventType.MOUSE_DOWN, (event: EventMouse) => {
            console.log("Mouse down on " + event.currentTarget.name);
            this.tank.getComponent(tankScript).shootBullet();
            event.bubbles = false;
        });
    }

    start() {

    }

    update(deltaTime: number) {

    }
}
